@model Primera.Models.Vehiculo

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="mb-4">Crear Vehículo</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="NoPlaca" class="form-label"></label>
                    <input asp-for="NoPlaca" class="form-control" />
                    <span asp-validation-for="NoPlaca" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Marca" class="form-label"></label>
                    <input asp-for="Marca" class="form-control" />
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Color" class="form-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TipoVehiculo" class="form-label"></label>
                    <input asp-for="TipoVehiculo" class="form-control" />
                    <span asp-validation-for="TipoVehiculo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Id_Cliente" class="form-label"></label>
                    <select asp-for="Id_Cliente" class="form-select" asp-items="@(ViewData["Id_Cliente"] as SelectList)">
                        <option value="">-- Seleccione un Cliente --</option>
                    </select>
                    <span asp-validation-for="Id_Cliente" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
