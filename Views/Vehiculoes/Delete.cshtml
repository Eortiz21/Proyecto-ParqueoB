@model Primera.Models.Vehiculo

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Eliminar Vehículo</h1>

    <div class="alert alert-warning" role="alert">
        ¿Está seguro que desea eliminar este vehículo?
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light">
            Información del Vehículo
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NoPlaca)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NoPlaca)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Marca)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Marca)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Color)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Color)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TipoVehiculo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoVehiculo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id_Cliente)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id_Cliente)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id_Vehiculo" />
        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
    </form>
</div>
