@model Primera.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Detalles del Cliente</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombres</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombres)</dd>

                <dt class="col-sm-3">Apellidos</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellidos)</dd>

                <dt class="col-sm-3">Teléfono</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">Dirección</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
            </dl>
            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id_Cliente" class="btn btn-primary me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista
                </a>
            </div>
        </div>
    </div>
</div>
