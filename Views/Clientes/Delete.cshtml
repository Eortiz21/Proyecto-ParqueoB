@model Primera.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Eliminar Cliente</h3>
        </div>
        <div class="card-body">
            <h5 class="text-warning mb-4">
                <i class="bi bi-exclamation-triangle-fill"></i>
                ¿Está seguro que desea eliminar este cliente?
            </h5>

            <dl class="row">
                <dt class="col-sm-3">Nombres</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombres)</dd>

                <dt class="col-sm-3">Apellidos</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellidos)</dd>

                <dt class="col-sm-3">Teléfono</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">Dirección</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id_Cliente" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
